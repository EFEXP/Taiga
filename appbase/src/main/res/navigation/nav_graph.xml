<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/barcodeScanFragment"
        android:name="com.ebifry.barcode.ui.BarcodeScanFragment"
        android:label="@string/barcode_scan_fragment_label"
        tools:layout="@layout/fragment_barcode_scan">
        <action
            android:id="@+id/action_FirstFragment_to_codeLookUpFragment"
            app:destination="@id/searchHistoryFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            />
        <action
            android:id="@+id/action_FirstFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchHistoryFragment"
        android:name="com.ebifry.barcode.ui.SearchHistoryFragment"
        android:label="CodeLookUpFragment"
        tools:layout="@layout/fragment_search_history"
        >
        <action
            android:id="@+id/action_codeLookUpFragment_to_FirstFragment"
            app:destination="@id/barcodeScanFragment" >
        </action>
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.ebifry.appbase.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_FirstFragment"
            app:destination="@id/barcodeScanFragment" />
        <action
            android:id="@+id/action_mainFragment_to_placeholder"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment android:id="@+id/settingsFragment"
        android:name="com.ebifry.preference.SettingsFragment"
        android:label="SettingsFragment"
        >
        <action
            android:id="@+id/action_placeholder_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>
